
# Use a base image with a Java runtime for the final image
FROM adoptopenjdk:11-jre-hotspot
WORKDIR /app

# Copy the JAR file generated by the previous build stage

COPY ./target/event-ms.jar app/app.jar

# Expose the default HTTP port (adjust as per your application's configuration)
EXPOSE 8080

# Set the command to run the Quarkus application
CMD ["java", "-jar", "./app/app.jar"]
CMD ["java", "-Djava.library.path=/app/lib", "-jar", "./app/app.jar"]
